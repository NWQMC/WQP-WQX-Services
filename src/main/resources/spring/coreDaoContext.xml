<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="wqpCoreSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="configLocation" value="classpath:/mybatis/mybatisConfig.xml"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="webServiceLogDao" class="gov.usgs.cida.wqp.service.WebServiceLogDao" autowire="byName">
        <property name="sqlSessionFactory" ref="wqpCoreSqlSessionFactory"/>
    </bean>

</beans>
