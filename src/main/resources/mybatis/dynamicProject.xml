<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dynamicWhere">
	<sql id="baseWhereProjectClauses">
		<if test="organization != null">
			and (<include refid="dynamicWhere.organization" />)
		</if>
		<if test="providers != null">
			and (<include refid="dynamicWhere.providers" />)
		</if>
        <if test="command != null">
        	and (<include refid="dynamicWhere.commandavoid" />)
        </if>
		<if test="project != null">
			and (<include refid="dynamicWhere.project" />)
		</if>
	</sql>
	
	<sql id="childWhereProjectClauses">
		<if test="organization != null">
			and (<include refid="dynamicWhere.organization" />)
		</if>
		<if test="providers != null">
			and (<include refid="dynamicWhere.providers" />)
		</if>
        <if test="startDateLo != null or startDateHi != null">
            and (<include refid="dynamicWhere.startDateLoHi" />)
        </if>
        <if test="command != null">
        	and (<include refid="dynamicWhere.commandavoid" />)
        </if>
		<if test="project != null">
			and (<include refid="dynamicWhere.projectId" />)
		</if>
	</sql>

	<sql id="dynamicWhere.projectJoinActivitySum">
		join (
			select distinct
					prime.data_source,
					prime.project_id as activity_projects
			from activity_sum prime
			<if test="bBox != null or within != null">
				join station_sum quaternary
				  on prime.station_id = quaternary.station_id and
				     prime.data_source_id = quaternary.data_source_id
			</if>
			<where>
				<include refid="dynamicWhere.baseWhereStationGeoClauses"/>
				<include refid="dynamicWhere.baseWhereStationClauses" />
				<include refid="dynamicWhere.childWhereProjectClauses" />
			</where>
			) tertiary
			on prime.project_dim_value = tertiary.activity_projects
	</sql>

	<sql id="dynamicWhere.projectJoinResultSum">
		join (
			  select distinct
			  		 prime.data_source,
			  		 prime.project_id as activity_projects
			  from result_sum prime
			  <if test="bBox != null or within != null">
			  	join station_sum quaternary
			  	  on prime.station_id = quaternary.station_id and
			  	     prime.data_source_id = quaternary.data_source_id
			  </if>
			  <where>
			  	  <include refid="dynamicWhere.baseWhereStationGeoClauses" />
			  	  <include refid="dynamicWhere.baseWhereStationClauses" />
			  	  <include refid="dynamicWhere.baseWhereResultClauses" />
			  	  <include refid="dynamicWhere.childWhereProjectClauses" />
			  </where>
			  ) tertiary
			  on prime.project_dim_value = tertiary.activity_projects
	</sql>

	<sql id="projectsBase">
		from project_data prime
		<choose>
			<when test="activity == null and analyticalmethod == null and assemblage == null and 
			            bBox == null and characteristicName == null and characteristicType == null and 
			            countrycode == null and countycode == null and dataProfile == null and huc == null and 
			            lat == null and long == null and mimeType == null and minactivities == null and 
			            minresults == null and nldiSites == null and pCode == null and 
			            result == null and sampleMedia == null and 
			            siteid == null and siteType == null and sorted == null and startDateHi == null and 
			            startDateLo == null and statecode == null and subjectTaxonomicName == null and 
			            within == null">
	            <where>
	            	<include refid="dynamicWhere.baseWhereProjectClauses"/> 
	            </where>           
            </when> 
			<when test="analyticalmethod == null and assemblage == null and characteristicName == null and
						characteristicType == null and pCode == null and subjectTaxonomicName == null">
				join (
					select distinct
						prime.code_value
					from
						project_dim prime
				<include refid="dynamicWhere.projectJoinActivitySum" />
				) secondary
				on prime.project_identifier = secondary.code_value
			</when>
			<otherwise>
				join (
					select distinct
						prime.code_value
					from
						project_dim prime
				<include refid="dynamicWhere.projectJoinResultSum"/>
				) secondary
				on prime.project_identifier = secondary.code_value
			</otherwise>
		</choose>
	</sql>
</mapper>
